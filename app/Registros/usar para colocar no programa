import React, { useState } from 'react';
import { View, TextInput, Button } from 'react-native';

const App = () => {
  // Estado para armazenar os valores dos campos de texto como um objeto
  const [formData, setFormData] = useState({
    field1: '',
    field2: '',
    field3: ''
  });

  // Estado para controlar se o botão está habilitado ou não
  const [isButtonEnabled, setIsButtonEnabled] = useState(false);

  // Função chamada toda vez que qualquer campo muda
  const handleTextChange = (field, value) => {
    // Atualiza o estado com o novo valor do campo
    setFormData((prevState) => {
      const newFormData = { ...prevState, [field]: value };

      // Verifica se todos os campos estão preenchidos
      const allFieldsFilled = Object.values(newFormData).every((item) => item.trim() !== '');
      
      // Habilita ou desabilita o botão com base na verificação
      setIsButtonEnabled(allFieldsFilled);

      return newFormData;
    });
  };

  return (
    <View style={{ padding: 20 }}>
      <TextInput
        style={{
          height: 40,
          borderColor: 'gray',
          borderWidth: 1,
          marginBottom: 20,
          paddingLeft: 10,
        }}
        placeholder="Campo 1"
        value={formData.field1}
        onChangeText={(text) => handleTextChange('field1', text)}  // Chama a função passando o nome do campo
      />

      <TextInput
        style={{
          height: 40,
          borderColor: 'gray',
          borderWidth: 1,
          marginBottom: 20,
          paddingLeft: 10,
        }}
        placeholder="Campo 2"
        value={formData.field2}
        onChangeText={(text) => handleTextChange('field2', text)}
      />

      <TextInput
        style={{
          height: 40,
          borderColor: 'gray',
          borderWidth: 1,
          marginBottom: 20,
          paddingLeft: 10,
        }}
        placeholder="Campo 3"
        value={formData.field3}
        onChangeText={(text) => handleTextChange('field3', text)}
      />

      <Button
        title="Enviar"
        onPress={() => alert('Botão pressionado!')}
        disabled={!isButtonEnabled}  // Desabilita o botão se `isButtonEnabled` for `false`
      />
    </View>
  );
};

export default App;
